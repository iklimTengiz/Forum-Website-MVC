@model alenen.ViewModels.ResetPasswordModel
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}


<div class="space"></div>
<h2 class="baslik">Şifre Sıfırlama Mail Talebi</h2>
<style>
    .baslik {
        font-weight: 600;
        color: #DF9433;
        font-size: 24px;
        padding:10px 0;
    }

    .sifreyenikural ul li {
        padding: 10px;
    }

</style>

<div class="form-horizontal">
    <hr />


    <div class="sifreyenikural">
        <ul>
            <li>
               Şifrenizi kimse ile paylaşmayınız.
            </li>
            <li>
                Şifrenizi kaybetmeniz durmunda moderatorlerimiz size yardımcı olamazlar, şifrelerinize hiçbir şekilde erişimimiz yoktur. Bu nedenle moderatörlerden şifre talep etmeyiniz.
            </li>
            <li>
               Bu alan içerisinde yeni şifrenizi oluşturarak, şifre güncellme işlemini tamamlar tamamlamaz yeni şifrenizi kullanmaya başlayabilirsiniz.
            </li>
            <li>
               Lütfen yeni şifrenizi ilk kutucuğa doğrulamak için tekrarını ikinci kutucuğa yazın.
            </li>
        </ul>

    </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4 class="baslik">Şifrenizi Yeniden Oluşturun</h4>
            <hr />
            <div class="text-danger">
                @ViewBag.Message
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
               <div class="col-md-2">Yeni Şifreniz:</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">Şifrenizin Tekrarı:</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.HiddenFor(a => a.ResetCode)
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Kaydet" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


