<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Mail
        </dt>

        <dd>
            @Html.DisplayFor(model => model.mail)
        </dd>

        <dt>
           Kullanıcı Adı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.kadi)
        </dd>

       
