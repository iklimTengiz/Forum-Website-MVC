            @Html.DisplayFor(model => model.isim)
        </dd>

        <dt>
            Soyisim
        </dt>

        <dd>
            @Html.DisplayFor(model => model.soyisim)
        </dd>

        <dt>
           Telefon
        </dt>

        <dd>
            @Html.DisplayFor(model => model.telefon)
        </dd>

        <dt>
            Moderatör mü?
        </dt>

        <dd>
            @Html.DisplayFor(model => model.moderatormu)
        </dd>

        <dt>
            Cinsiyet
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cinsiyet.cinsiyetad)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-default" /> |
            @Html.ActionLink("Listeye Dön", "Index")
        </div>
    }
</div>
