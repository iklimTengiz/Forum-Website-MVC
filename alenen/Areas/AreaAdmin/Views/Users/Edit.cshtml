@model alenen.User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/AreaAdmin/Views/Shared/AdminLayout.cshtml";
}

<p><i style="color:orangered">" @Model.kadi "</i>adlı kullanıcının detayları.</p>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.userid)
    @Html.HiddenFor(model => model.mail)
    @Html.HiddenFor(model => model.kadi)
    @Html.HiddenFor(model => model.sifre)
    @Html.HiddenFor(model => model.resim)
    @Html.HiddenFor(model => model.sozlesme)
    @Html.HiddenFor(model => model.olusumtarih)
    @Html.HiddenFor(model => model.isim)
    @Html.HiddenFor(model => model.soyisim)
    @Html.HiddenFor(model => model.telefon)
    @Html.HiddenFor(model => model.cinsiyetid)

    @Html.HiddenFor(model => model.ResetPasswordCode)





    <div class="form-group ">
        <p class="col-md-2">Aktifmi</p>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.aktifmi)
                @Html.ValidationMessageFor(model => model.aktifmi, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>


    <div class="form-group">
        <p class="col-md-2">
            Moderator mü?
        </p>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.moderatormu)
                @Html.ValidationMessageFor(model => model.moderatormu, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    @{
        var user = Session["LoginAdminUser"] as alenen.User;
    }
        
    @if (user.adminmi == true)
    {
        <div class="form-group">
            <p class="col-md-2">Admin mi?</p>
            <div class="col-md-10">

                <div class="checkbox">
                    @Html.EditorFor(model => model.adminmi)
                    @Html.ValidationMessageFor(model => model.adminmi, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    }
    else
    {
        @Html.HiddenFor(model => model.adminmi)
    }

    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kaydet" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Listeye Dön", "Index")
</div>
