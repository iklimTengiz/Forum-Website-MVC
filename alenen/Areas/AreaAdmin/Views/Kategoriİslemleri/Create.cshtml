@model alenen.Kategori

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AreaAdmin/Views/Shared/AdminLayout.cshtml";
}

<h2>Yeni Kategori Ekle</h2>
<p>Sistemde bulunan bir kategori adını tekarar kullanamazsınız kullanmanız durumunda hata alırsınız. Bu nedenle olmayan bir isim seçin.Her kategorinin adı eşsiz olmalıdır.</p>
@using (Html.BeginForm("Create", "Kategoriİslemleri", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <p class="col-md-2"> Kategori adı</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.kategoriad, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            @Html.ValidationMessageFor(model => model.kategoriad, "", new { @class = "text-danger" })

        </div>
    </div>

    <br />
    <div class="form-group">
        <p class="col-md-2"> Açıklama:</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.aciklama, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            @Html.ValidationMessageFor(model => model.aciklama, "", new { @class = "text-danger" })
        </div>
    </div>


    <br />
    <div class="form-group">
        <p class="col-md-2">
            Resim:
        </p>
        <div class="col-md-4">

            <input type="file" name="imagee" class="form-control" onchange="readURL(this);" required>
            @Html.ValidationMessageFor(model => model.resim, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />
    <div class="form-group">
        <p class="col-md-2">
            Ana Kategori
        </p>
        <div class="col-md-4">

            @Html.DropDownList("anakatid", null, htmlAttributes: new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(model => model.anakatid, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ekle" class="btn btn-default" />
        </div>
    </div>

</div>

}
<div>
    @Html.ActionLink("Listeye Dön", "Index")
</div>
