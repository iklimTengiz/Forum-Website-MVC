            @Html.ValidationMessageFor(model => model.konuad, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(model => model.kategoriid, "Kategori", htmlAttributes: new { @class = "control-label col-md-2" })
